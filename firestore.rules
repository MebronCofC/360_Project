rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper: check if user is admin (by email)
    function isAdmin() {
      return isSignedIn() &&
        (request.auth.token.email == 'mebneon@gmail.com' ||
         request.auth.token.email == 'johnsonns@g.cofc.edu');
    }
    
    // Helper: check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // User tokens for FCM - users can only write their own tokens
    match /userTokens/{userId} {
      allow read: if isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Events - public read, admin write
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Past events - public read, admin write
    match /pastEvents/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Seats - public read, admin write
    match /seats/{seatId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Tickets security
    // - Allow get (single-doc reads) for signed-in users so client transactions
    //   can check existence of seat tickets without permission errors
    // - Users can query their own tickets; admins can query all
    // - Any signed-in user can create tickets for themselves; admins can create any
    // - Updates/deletes allowed for owner or admin
    match /tickets/{ticketId} {
      // Single document reads (includes reading non-existent docs in transactions)
      allow get: if isSignedIn();
      // Querying/Listing: users can read their own tickets, admins can read all
      allow list: if isSignedIn() && (
        request.query.limit == null || 
        resource.data.ownerUid == request.auth.uid ||
        isAdmin()
      );

      // Create: user can create tickets they own; admin can create any (including ADMIN_*)
      allow create: if isSignedIn() && (
        request.resource.data.ownerUid == request.auth.uid || isAdmin()
      );
        // Update: allow admin, owner, or re-issue of a non-active ticket
        allow update: if isSignedIn() && (
          isAdmin() ||
          resource.data.ownerUid == request.auth.uid ||
          (
            // Re-issue: existing ticket is not actively Issued
            resource.data.status != 'Issued' &&
            request.resource.data.ownerUid == request.auth.uid
          )
        );

        // Delete: admin or owner
        allow delete: if isSignedIn() && (
          resource.data.ownerUid == request.auth.uid || isAdmin()
        );
    }
    
    // Event inventory - public read for UI, system/admin write
    match /eventInventories/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // SMS logs - admin only
    match /smsLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // SMS errors - admin only
    match /smsErrors/{errorId} {
      allow read, write: if isAdmin();
    }
  }
}
